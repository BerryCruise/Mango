<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shot">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/shot_item_simple_height"
            android:contentDescription="@string/shot_desc" />

        <TextView
            android:id="@+id/tag_gif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginEnd="@dimen/activity_horizontal_margin_half"
            android:layout_marginTop="@dimen/activity_vertical_margin_half"
            android:alpha="0.5"
            android:background="@drawable/bg_gif_tag"
            android:paddingEnd="@dimen/activity_horizontal_margin_half"
            android:paddingStart="@dimen/activity_horizontal_margin_half"
            android:text="@string/gif"
            android:textColor="@android:color/white" />

    </FrameLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="@dimen/anim_view_dimen_primary"
        android:layout_height="@dimen/anim_view_dimen_primary"
        android:layout_gravity="center"
        android:scaleType="center"
        app:lottie_autoPlay="true"
        app:lottie_fileName="servishero_loading.json"
        app:lottie_loop="true" />

</FrameLayout>